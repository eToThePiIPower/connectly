<div class="row">
  <div class="col-md-6">
    <div class="card d-50">
      <h1 class="h4 card-header">
        <%= @contact.name %>
      </h1>

      <div class="card-body">
        <%= @contact.email %>
        <%= @contact.notes %>
      </div>

      <div class="card-footer">
        <%= link_to 'Edit', edit_contact_path(@contact) %> |
        <%= link_to 'Back', contacts_path %>
      </div>
    </div>
  </div>
</div>
