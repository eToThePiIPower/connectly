<div class="row">
  <div class="col-md-7">
    <div class="card d-50">
      <h1 class="h4 card-header">
        <%= @contact.name %>
      </h1>

      <div class="card-body">
        <%= @contact.email %>
        <%= @contact.notes %>
      </div>

      <div class="card-footer card-footer-actions">
        <div class="btn-group btn-group-sm pull-right" role="group">
          <%= link_to 'Edit', edit_contact_path(@contact),
            class: 'btn btn-secondary' %>
          <%= link_to 'Back', contacts_path, class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>
  </div>
</div>
