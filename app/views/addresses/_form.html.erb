<div class="row">
  <div class="form-group col-md-2">
    <%= f.label :address_type %>
    <%= f.select(:address_type, Address.ADDRESS_TYPES, {},
                 class: 'form-control') %>
  </div>

  <%= f.fields_for :body do |b| %>
    <div class="form-group col-md-10">
      <%= b.label :street1 %>
      <%= b.text_field :street1, class: 'form-control' %>
    </div>

    <div class="form-group col-md-7 offset-md-2">
      <%= b.label :city %>
      <%= b.text_field :city, class: 'form-control' %>
    </div>

    <div class="form-group col-md-1">
      <%= b.label :state %>
      <%= b.text_field :state, class: 'form-control' %>
    </div>

    <div class="form-group col-md-2">
      <%= b.label :zip %>
      <%= b.text_field :zip, class: 'form-control' %>
    </div>
  <% end %>
</div>
